<div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
<% answers.each_with_index do |answer, idx| %>
  <% if idx == 6 %>
    <div class="mb-8 md:mb-16 col-start-2">
  <% else %>
    <div class="mb-8 md:mb-16">
  <% end %>
    <div class="font-noto text-xl md:text-3xl"><%= "#{idx + 1}問目" %></div>
    <div class=<%= use_kaisei_font?(idx + 1) ? "font-kaisei" : "font-dela" %>>
      <div class="mt-3 md:mt-6 text-2xl md:text-5xl lg:text-4xl 2xl:text-5xl"><%= answer %></div>
    </div>
  </div>
<% end %>
</div>